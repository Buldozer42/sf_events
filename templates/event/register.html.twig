{% extends 'base.html.twig' %}
{% block body %}
    <div class="container my-3">
        <div class="row justify-content-center align-items-center g-2">
            <div class="col"></div>
            <div class="col-6">
                <h1 class="text-center">Planning a event</h1>
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.description) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.date) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.location) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.maxGuests) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.private) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.visible) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.price) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.type) }}
                    </div>
                {{ form_rest(form) }}
                    <div class="text-end">
                        <input class="btn btn-success" type="submit" value="Register">
                        <a href="{{ path('app_events')}}" class="btn btn-secondary">Cancel</a>
                    </div>
                {{ form_end(form) }}
            </div>
            <div class="col"></div>
        </div>
    </div>
{% endblock %}